{
  "extends": "tsconfig/nextjs.json",
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "../../packages/af-shared/axios.d.ts"
  ],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@pages/*": ["pages/*"],
      "@shared/*": ["../../../packages/af-shared/src/*"],
      "@/*": ["../../../packages/af-shared/src/*"] // af-shared used alias, needs to be resolved for build
    }
  }
}
